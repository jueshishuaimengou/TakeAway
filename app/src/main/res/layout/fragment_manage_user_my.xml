<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.frament.ManageUserMyFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ThemeRed"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="15dp"

        >
        <!-- 放头像和账号-->
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/user_manage_user_my_tx"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/login"
                android:background="@drawable/circle_background"
                />

            <TextView
                android:id="@+id/user_manage_user_my_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="root"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/user_manage_user_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小铭杂货部"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#F2FFFFFF"
                />


            <TextView
                android:id="@+id/user_manage_user_my_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺简介:这是一个不一样的店铺"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:textColor="#F2FFFFFF"
                />
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />


        <TextView
            android:id="@+id/user_manage_user_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看完成订单"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:clickable="true"
            android:background="@color/white"
            android:drawableLeft="@drawable/yifahuo"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:drawableRight="@drawable/path"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />

        <TextView
            android:id="@+id/user_manage_user_my_res_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的收获地址"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:clickable="true"
            android:background="@color/white"
            android:drawableLeft="@drawable/sh"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:drawableRight="@drawable/path"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />

        <TextView
            android:id="@+id/user_manage_user_my_zx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销账号"
            android:foreground="?android:attr/selectableItemBackground"

            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:clickable="true"
            android:background="@color/white"
            android:drawableLeft="@drawable/zx"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:drawableRight="@drawable/path"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />

        <TextView
            android:id="@+id/user_manage_user_my_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出账号"
            android:foreground="?android:attr/selectableItemBackground"

            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#333333"
            android:clickable="true"
            android:background="@color/white"
            android:drawableLeft="@drawable/exit"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:drawableRight="@drawable/path"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            />



    </LinearLayout>





    </ScrollView>









</LinearLayout>